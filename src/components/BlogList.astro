---
import { getCollection } from "astro:content";
import FeedContainer from "./FeedContainer.astro";
import BlogItem from "./BlogItem.astro";

interface Props {
  tagFilter?: string;
}



const entries = await getCollection("blog");

function sortEntries(a: typeof entries[0], b: typeof entries[0]) {
  if (!a.data.publishDate) {
    return -1;
  } else if (!b.data.publishDate) {
    return 1;
  }
  return b.data.publishDate.valueOf() - a.data.publishDate.valueOf();
}
const { tagFilter } = Astro.props;
---
<FeedContainer>
    {
      entries
        .filter(e => !tagFilter || e.data.tags.includes(tagFilter))
        .sort(
          sortEntries
        )
        .map((post) => (
          <BlogItem
            title={post.data.title}
            description={post.data.description}
            publishDate={post.data.publishDate}
            lastUpdatedDate={post.data.lastUpdateDate}
            tags={post.data.tags}
            href=`/blog/${post.slug}`
            externalUrl={post.data.externalUrl}
          />
        ))
    }
  </FeedContainer>
