---
import { Picture } from "astro:assets";
interface Props {
  src: ImageMetadata;
  alt: string;
  gif?: boolean;
}

const { src, alt, gif = false } = Astro.props;
---

<Picture
  class="w-full md:w-[50vw] lg:w-[44vw] xl:w-[33vw] rounded-md"
  src={src}
  formats={gif ? ["gif"] : ["avif", "webp"]}
  alt={alt}
  loading="lazy"
/>
