---
import "@styles/global.css";
import { ClientRouter } from "astro:transitions";
import DotGrid from "@components/DotGrid.astro";
import Footer from "@components/Footer.astro";
import { SEO } from "astro-seo";
import type { CollectionEntry } from "astro:content";
import { SITE_URL } from "@lib/consts";

interface Props {
  entry: CollectionEntry<"blog">;
}

const {
  entry: {
    data: { title, description },
    slug,
  },
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.27/dist/katex.min.css"
      integrity="sha384-Pu5+C18nP5dwykLJOhd2U4Xen7rjScHN/qusop27hdd2drI+lL5KvX7YntvT8yew"
      crossorigin="anonymous"
    />

    <!-- The loading of KaTeX is deferred to speed up page rendering -->
    <script
      defer
      is:inline
      src="https://cdn.jsdelivr.net/npm/katex@0.16.27/dist/katex.min.js"
      integrity="sha384-2B8pfmZZ6JlVoScJm/5hQfNS2TI/6hPqDZInzzPc8oHpN5SgeNOf4LzREO6p5YtZ"
      crossorigin="anonymous"></script>

    <!-- To automatically render math in text elements, include the auto-render extension: -->
    <script
      defer
      is:inline
      src="https://cdn.jsdelivr.net/npm/katex@0.16.27/dist/contrib/auto-render.min.js"
      integrity="sha384-hCXGrW6PitJEwbkoStFjeJxv+fSOOQKOPbJxSfM6G5sWZjAyWhXiTIIAmQqnlLlh"
      crossorigin="anonymous"
      onload="renderMathInElement(document.body);"></script>

    <meta name="generator" content={Astro.generator} />
    <meta name="darkreader-lock" />
    <title>{title} | Jack Hogan</title>
    <ClientRouter />
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          type: "website",
          title,
          image: `${SITE_URL}/blog/${slug}/og.png`,
        },
        optional: {
          description,
          locale: "en-US",
          siteName: "jackhogan.me",
        },
        image: {
          alt: `A blog post by Jack titled "${title}"`,
        },
      }}
      twitter={{
        title,
        description,
        image: `${SITE_URL}/blog/${slug}/og.png`,
        imageAlt: `A blog post by Jack titled "${title}"`,
        card: "summary_large_image",
        site: "jackhogan.me",
        creator: "Jack Hogan",
      }}
    />
  </head>
  <body
    class="bg-gray-50 dark:bg-gray-950 dark:text-gray-100 overflow-x-hidden"
  >
    <DotGrid />
    <!--
    This is a dumb fix that essentially creates a blur that is only the height of the screen.
    This fixes a safari rendering bug that would cause it to disappear if it was the height of the full div.
    -->
    <div
      class="fixed left-1/2 top-0 transform -translate-x-1/2 w-full max-w-3xl h-full backdrop-blur-lg z-[-1] pointer-events-none"
    >
    </div>
    <div
      id="root-content"
      class="selection:bg-theme flex flex-col items-center w-screen mb-4"
    >
      <div class="flex-1 w-full max-w-3xl">
        <div class="px-4 items-center md:w-11/12">
          <slot />
        </div>
        <Footer alwaysCenter={true} isBlog={true} />
      </div>
    </div>
  </body>
</html>
<style>
  @import "@styles/global.css" reference;
  body {
    text-wrap: pretty;
  }

  :global(.katex-display) {
    margin: auto !important;
  }
</style>
