---
import "@styles/global.css";
import { Font } from "astro:assets";
interface Props {
  name: string;
}

const { name } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="darkreader-lock" />
    <Font cssVariable="--font-sans" preload />
    <Font cssVariable="--font-serif" />
    <Font cssVariable="--font-mono" />
    <Font cssVariable="--font-title" />
    <title>{name} | Jack Hogan</title>
  </head>
  <body
    class="bg-gray-50 dark:bg-gray-950 dark:text-gray-100 overflow-x-hidden"
  >
    <slot />
  </body>
</html>

<style>
  @import "@styles/global.css" reference;
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    text-wrap: pretty;
  }
</style>
